<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arkademi">

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
            android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Arkademi">
        <activity
            android:name=".LearnCreatorActivity"
            android:label="@string/title_activity_learn_creator"
            android:theme="@style/Theme.Arkademi.NoActionBar"></activity>
        <activity android:name=".ui.main.CreatorInfoActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="Arkademi"
            android:theme="@style/Theme.Arkademi.NoActionBar" />
        <activity
            android:name=".TutorialActivity"
            android:label="Tutorial" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>