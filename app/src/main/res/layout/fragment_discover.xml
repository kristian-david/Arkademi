<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp" >

        <TableRow>

            <ImageButton
                android:id="@+id/previewImage_1"
                android:layout_width="0dp"
                android:layout_height="325dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/preview_1"
                android:layout_margin="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ripple_effect_overlay" >
            </ImageButton>

            <ImageButton
                android:id="@+id/previewImage_2"
                android:layout_width="0dp"
                android:layout_height="325dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/preview_2"
                android:layout_margin="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ripple_effect_overlay" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/previewImage_3"
                android:layout_width="0dp"
                android:layout_height="325dp"
                android:layout_gravity="left"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/preview_3"
                android:scaleType="fitCenter"
                android:src="@drawable/ripple_effect_overlay" />

            <ImageButton
                android:id="@+id/previewImage_4"
                android:layout_width="0dp"
                android:layout_height="325dp"
                android:layout_gravity="right"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/preview_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ripple_effect_overlay" />

        </TableRow>


    </TableLayout>
</ScrollView>